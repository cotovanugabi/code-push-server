{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./bin",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["script/**/*"],
  "exclude": ["node_modules"]
}