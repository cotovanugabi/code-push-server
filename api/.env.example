# Auth Protection
AUTH_SECRET_TOKEN=your-very-secure-secret-token  # Fallback token if Key Vault is not available
AUTH_TOKEN_REFRESH_INTERVAL=3600000  # How often to refresh token from Key Vault (in ms)

# Azure Key Vault (required for secure token storage)
AZURE_KEYVAULT_ACCOUNT=your-keyvault-name

